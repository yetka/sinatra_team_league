
<h1 class="jumbotron">Update <%=@team.name() %> </h1>

<h3>Update/Delete Team name: </h3>

<form action="/teams/<%= @team.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="name">Rename your team:</label>
  <input id="name" name="name" type="text">
  <button type="submit">Update</button>
</form>
<form action="/teams/<%= @team.id() %>" method="post">
  <input name="_method" type="hidden" value="delete">
  <button type="submit">Delete team</button>
</form>
<br>
<br>

<h3>Update Coordinator name: </h3>

<form action="/coordinator_update/<%= @team.id() %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <label for="coordinator">Rename your coordinator:</label>
  <input id="coordinator" name="coordinator" type="text">
  <button type="submit">Update</button>
</form>
